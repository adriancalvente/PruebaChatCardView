<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ActividadRegistro">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout3"
      android:layout_width="368dp"
      android:layout_height="674dp"
      android:background="@drawable/pantalla_loggin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.488"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="319dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/constraint_loggin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoLoggin">

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="36dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:tint="#F6F6F6"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/iconuser"
          tools:ignore="UseAppTint" />

      <EditText
          android:id="@+id/nombreUsuario"
          android:layout_width="277dp"
          android:layout_height="51dp"
          android:backgroundTint="@android:color/transparent"
          android:ems="10"
          android:fontFamily="@font/roboto_condensed_bold"
          android:hint="Nombre de Usuario"
          android:inputType="textPersonName"
          android:textColor="#FFFFFF"
          android:textColorHint="#FFFFFF"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toEndOf="@+id/imageView2"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="319dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/constraint_loggin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

      <ImageView

          android:id="@+id/imageView6"
          android:layout_width="34dp"
          android:layout_height="35dp"
          android:layout_weight="1"
          android:tint="#F6F6F6"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/contrasena"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/candado"
          tools:ignore="UseAppTint" />

      <EditText
          android:id="@+id/contrasena"
          android:layout_width="277dp"
          android:layout_height="51dp"
          android:backgroundTint="@android:color/transparent"
          android:ems="10"
          android:fontFamily="@font/roboto_condensed_bold"
          android:hint="Introduce contraseÃ±a"
          android:inputType="textPassword"
          android:textColor="#FFFFFF"
          android:textColorHint="#FFFFFF"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.489" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="295dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:onClick="onClick"
        android:text="Iniciar Sesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="303dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciar"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoLoggin"
        android:layout_width="363dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:id="@+id/textView"
          android:layout_width="235dp"
          android:layout_height="70dp"
          android:layout_marginEnd="28dp"
          android:autoSizeTextType="none"
          android:autoText="false"
          android:background="@drawable/bordes"
          android:fontFamily="@font/roboto_condensed_bold"
          android:gravity="center"
          android:text="INICIAR SESION"
          android:textColor="#FFFFFF"
          android:textSize="24sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.515" />

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="93dp"
          android:layout_height="104dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="@+id/imageView4"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ovalo" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_marginStart="24dp"
          android:background="@drawable/semiluna"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.461"
          app:srcCompat="@drawable/iconuser" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>