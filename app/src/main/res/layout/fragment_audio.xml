<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context=".fragments.Audio">

    <com.chibde.visualizer.SquareBarVisualizer
        android:id="@+id/visualizerSquareBar2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintVertical_bias="0.83" />

    <com.chibde.visualizer.CircleBarVisualizer
        android:id="@+id/visualizerCircleBar2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintVertical_bias="0.83" />

    <com.chibde.visualizer.LineVisualizer
        android:id="@+id/visualizerLine2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:visibility="invisible"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintVertical_bias="0.83" />

    <com.chibde.visualizer.BarVisualizer
        android:id="@+id/visualizerBar2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:visibility="invisible"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintVertical_bias="0.83" />

    <Button
        android:id="@+id/cambioEspectro2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:alpha="0"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/play"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintVertical_bias="0.83" />

    <com.chibde.visualizer.CircleVisualizer
        android:id="@+id/visualizerCircle2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintVertical_bias="0.83" />

    <com.chibde.visualizer.LineBarVisualizer
        android:id="@+id/visualizerLineBar2"
        android:layout_width="375dp"
        android:layout_height="208dp"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintVertical_bias="0.83" />

    <Button
        android:id="@+id/play"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:background="@drawable/reproducir"
        android:onClick="onClick"
        app:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/barraMusica"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/noRepetir"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginBottom="93dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/no_repetir"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/visualizerCircleBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraMusica"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/anterior"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/anterior"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/visualizerCircleBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraMusica"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/siguiente"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/siguiente"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/visualizerCircleBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="@+id/anterior"
        app:layout_constraintTop_toBottomOf="@+id/barraMusica"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/detener"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/visualizerCircleBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="@+id/anterior"
        app:layout_constraintTop_toBottomOf="@+id/barraMusica"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <SeekBar
        android:id="@+id/barraMusica"
        android:layout_width="307dp"
        android:layout_height="22dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#F6F3F3"
        android:progressBackgroundTint="#FAF8F8"
        app:layout_constraintBottom_toTopOf="@+id/play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenMusica" />

    <TextView
        android:id="@+id/cambioTiempo"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/anterior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenMusica"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TotalCancion"
        android:layout_width="49dp"
        android:layout_height="21dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="3dp"
        android:textColor="#F3F3F3"
        app:layout_constraintBottom_toTopOf="@+id/siguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenMusica"
        app:layout_constraintVertical_bias="0.041" />

    <ImageView
        android:id="@+id/imagenMusica"
        android:layout_width="280dp"
        android:layout_height="207dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/color_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notaMusical"
        android:layout_width="179dp"
        android:layout_height="157dp"
        android:src="@drawable/nota"
        app:layout_constraintBottom_toTopOf="@+id/barraMusica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385" />
</androidx.constraintlayout.widget.ConstraintLayout>